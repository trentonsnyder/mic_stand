<div class="page-container">
  <div class="one-column">
    <div class="card">
      <div>
        <h1><%= @event.name %></h1>
        <%= link_to "Back", event_path(@event), class: 'button primary' %>
      </div>
      <div>
        <a href="<%= "#{ENV['BASE_URL']}/broadcasts/#{@event.broadcast_token}" %>" target="_blank"><%= "#{ENV['BASE_URL']}/broadcasts/#{@event.broadcast_token}" %></a>
        <p>send to someone (no login required) or open for yourself</p>
      </div>

      <%= form_tag("/broadcasts/mailer", method: "post", remote: true) do %>
        <%= hidden_field_tag(:broadcast, @event.broadcast_token) %>
        <%= email_field_tag(:email, nil, required: true)%>
        <%= submit_tag("Send", id: "broadcast-mailer") %>
      <% end %>
    </div>
  </div>
</div>
